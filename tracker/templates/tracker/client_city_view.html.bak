{% extends 'tracker/base.html' %}

{% block content %}
<style>
    :root {
        --glass-bg: rgba(255, 255, 255, 0.95);
        --glass-border: 1px solid rgba(255, 255, 255, 0.4);
        --primary-accent: #2c3e50;
    }

    body {
        background-color: #f4f6f9;
        font-family: 'Outfit', sans-serif;
    }

    /* --- GLASS HEADER --- */
    .glass-header {
        background: var(--glass-bg);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.06);
        position: sticky;
        top: 0;
        z-index: 100;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
    }

    /* --- POLE CARD --- */
    .pole-card {
        border: 1px solid rgba(0, 0, 0, 0.04);
        background: white;
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s;
    }

    .pole-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08) !important;
    }

    .pole-card-img-wrapper {
        position: relative;
        overflow: hidden;
        height: 240px;
    }

    .pole-card-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .pole-card:hover .pole-card-img {
        transform: scale(1.05);
    }

    .status-badge {
        backdrop-filter: blur(4px);
        background: rgba(255, 255, 255, 0.9);
        color: #1a1a1a;
        font-weight: 700;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* --- METADATA PILLS --- */
    .meta-pill {
        background-color: #f8f9fa;
        border: 1px solid rgba(0, 0, 0, 0.03);
        border-radius: 8px;
        padding: 8px 12px;
        transition: background 0.2s;
    }

    .meta-pill:hover {
        background-color: #e9ecef;
    }

    .meta-label {
        font-size: 0.65rem;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        color: #adb5bd;
        font-weight: 700;
        margin-bottom: 2px;
    }

    .meta-value {
        font-size: 0.85rem;
        font-weight: 600;
        color: #343a40;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* --- GALLERY MODAL (SPLIT VIEW) --- */
    .modal-fullscreen .modal-content {
        background-color: #0b0b0b;
        color: white;
    }

    .gallery-layout {
        display: grid;
        grid-template-columns: 1fr 350px;
        height: 100vh;
        width: 100vw;
    }

    .gallery-stage {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #000;
        overflow: hidden;
    }

    .gallery-img {
        max-height: 100vh;
        max-width: 100%;
        object-fit: contain;
        transition: opacity 0.3s ease;
    }

    .gallery-sidebar {
        background: #1a1a1a;
        border-left: 1px solid #333;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        box-shadow: -10px 0 30px rgba(0, 0, 0, 0.5);
    }

    .nav-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 56px;
        height: 56px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        z-index: 10;
        font-size: 1.5rem;
    }

    .nav-arrow:hover {
        background: rgba(255, 255, 255, 0.9);
        color: black;
        transform: translateY(-50%) scale(1.1);
    }

    .nav-prev {
        left: 24px;
    }

    .nav-next {
        right: 24px;
    }

    @media (max-width: 992px) {
        .gallery-layout {
            grid-template-columns: 1fr;
            grid-template-rows: 1fr auto;
        }

        .gallery-sidebar {
            height: auto;
            max-height: 40vh;
            border-left: none;
            border-top: 1px solid #333;
            padding: 1.5rem;
        }

        .nav-arrow {
            width: 44px;
            height: 44px;
            font-size: 1.2rem;
        }

        .nav-prev {
            left: 12px;
        }

        .nav-next {
            right: 12px;
        }
    }

    .circular-chart {
        display: block;
        margin: 0 auto;
        max-width: 100%;
        max-height: 250px;
    }

    .circle-bg {
        fill: none;
        stroke: #eee;
        stroke-width: 3.8;
    }

    .circle {
        fill: none;
        stroke-width: 2.8;
        stroke-linecap: round;
        animation: progress 1s ease-out forwards;
    }

    @keyframes progress {
        0% {
            stroke-dasharray: 0 100;
        }
    }
</style>

<!-- HEADER -->
<div class="glass-header py-3 mb-4">
    <div class="container-fluid" style="max-width: 1400px;">
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">

            <!-- Branding -->
            <div class="d-flex align-items-center">
                <h2 class="m-0 fw-bold text-dark me-3"
                    style="font-family: 'Outfit', sans-serif; letter-spacing: -0.5px;">
                    {{ project.name }}
                </h2>
                <div class="d-none d-md-block border-start ps-3 border-dark border-opacity-25">
                    <span class="text-muted small fw-bold text-uppercase ls-1">Client View</span>
                </div>
            </div>

            <!-- Controls -->
            <div class="d-flex align-items-center gap-3">
                {% if filter_options %}
                <form method="get" class="d-flex align-items-center bg-white rounded-pill border p-1 ps-3 shadow-sm">
                    <span class="small text-muted fw-bold me-2 text-uppercase" style="font-size: 0.65rem;">View:</span>
                    <select name="village"
                        class="form-select form-select-sm border-0 bg-transparent fw-bold text-dark shadow-none"
                        style="width: 160px; font-size: 0.9rem;" onchange="this.form.submit()">
                        <option value="">All Locations</option>
                        {% for opt in filter_options %}
                        <option value="{{ opt }}" {% if current_filter == opt %}selected{% endif %}>{{ opt }}</option>
                        {% endfor %}
                    </select>
                </form>
                {% endif %}

                <!-- Progress Ring -->
                <div class="position-relative d-flex align-items-center justify-content-center"
                    style="width: 48px; height: 48px;">
                    <svg viewBox="0 0 36 36" class="circular-chart text-success w-100 h-100">
                        <path class="circle-bg"
                            d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                            fill="none" stroke="#e9ecef" stroke-width="3" />
                        <path class="circle" stroke-dasharray="{{ progress }}, 100"
                            d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                            fill="none" stroke="currentColor" stroke-width="3" />
                    </svg>
                    <span class="position-absolute small fw-bold text-dark" style="font-size: 0.7rem;">{{ progress
                        }}%</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MAIN GRID -->
<div class="container-fluid pb-5" style="max-width: 1400px;">

    {% if page_obj|length == 0 %}
    <div class="text-center py-5">
        <div class="mb-3 text-muted display-1"><i class="bi bi-inbox"></i></div>
        <h4 class="fw-bold text-muted">No items found matching your filter.</h4>
        <a href="?" class="btn btn-outline-dark rounded-pill mt-3 fw-bold px-4">Clear Filters</a>
    </div>
    {% endif %}

    <div class="row g-4">
        {% for pole in page_obj %}
        <div class="col-sm-6 col-lg-4 col-xxl-3">
            <div class="card h-100 pole-card rounded-4 overflow-hidden">

                <!-- Hero Image -->
                <div class="pole-card-img-wrapper cursor-pointer" onclick="openGallery('{{ pole.id }}', 0)">
                    {% with cover=pole.evidence.all.first %}
                    {% if cover %}
                    <img src="{{ cover.image.url }}" class="pole-card-img" alt="Pole Evidence">
                    {% else %}
                    <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light text-muted">
                        <div class="text-center">
                            <i class="bi bi-camera fs-1 opacity-25 d-block mb-2"></i>
                            <small class="fw-bold opacity-50">No Photos</small>
                        </div>
                    </div>
                    {% endif %}
                    {% endwith %}

                    <!-- Floating Badges -->
                    <div
                        class="position-absolute top-0 start-0 w-100 p-3 d-flex justify-content-between align-items-start pointer-events-none">
                        <span class="badge status-badge rounded-pill px-3 py-2">
                            {{ pole.custom_id }}
                        </span>
                        {% if pole.is_completed %}
                        <span class="badge bg-success shadow-sm rounded-pill px-2 py-1"><i
                                class="bi bi-check-lg"></i></span>
                        {% else %}
                        <span class="badge bg-warning text-dark shadow-sm rounded-pill px-2 py-1"><i
                                class="bi bi-clock-history"></i></span>
                        {% endif %}
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4 d-flex flex-column">
                    <div class="row g-2 mb-4">
                        {% for val in pole.custom_values.all|slice:":4" %}
                        <div class="col-6">
                            <div class="meta-pill text-truncate">
                                <div class="meta-label">{{ val.field_def.label }}</div>
                                <div class="meta-value" title="{{ val.value }}">{{ val.value }}</div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    <div class="mt-auto d-flex gap-2">
                        <button class="btn btn-dark flex-grow-1 rounded-pill fw-bold py-2 shadow-sm"
                            onclick="openGallery('{{ pole.id }}', 0)">
                            <i class="bi bi-images me-2"></i>View Photos
                        </button>
                        <button class="btn btn-light border flex-shrink-0 rounded-circle"
                            style="width: 42px; height: 42px;"
                            onclick="openFlagModal('{{ pole.id }}', '{{ pole.custom_id }}')">
                            <i class="bi bi-flag text-danger"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Pagination -->
    {% if page_obj.has_other_pages %}
    <div class="d-flex justify-content-center mt-5">
        <nav>
            <ul class="pagination shadow-sm rounded-pill overflow-hidden">
                {% if page_obj.has_previous %}
                <li class="page-item"><a class="page-link border-0 text-dark fw-bold px-4 py-2"
                        href="?page={{ page_obj.previous_page_number }}&village={{ current_filter }}">Previous</a></li>
                {% endif %}
                <li class="page-item disabled"><span
                        class="page-link border-0 bg-light text-muted fw-bold px-4 py-2">Page {{ page_obj.number
                        }}</span></li>
                {% if page_obj.has_next %}
                <li class="page-item"><a class="page-link border-0 text-dark fw-bold px-4 py-2"
                        href="?page={{ page_obj.next_page_number }}&village={{ current_filter }}">Next</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
    {% endif %}
</div>

<!-- PREMIUM GALLERY MODAL -->
<div class="modal fade" id="galleryModal" tabindex="-1" aria-hidden="true" data-bs-keyboard="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content border-0">
            <div class="modal-body p-0">

                <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-4 z-index-20"
                    data-bs-dismiss="modal" style="z-index: 100;"></button>

                <div class="gallery-layout">

                    <!-- Left: Image Stage -->
                    <div class="gallery-stage">
                        <div class="nav-arrow nav-prev" onclick="navigateGallery(-1)"><i class="bi bi-chevron-left"></i>
                        </div>
                        <img id="galleryImage" src="" class="gallery-img">
                        <div class="nav-arrow nav-next" onclick="navigateGallery(1)"><i class="bi bi-chevron-right"></i>
                        </div>
                    </div>

                    <!-- Right: Info Sidebar -->
                    <div class="gallery-sidebar text-white">
                        <div class="mb-4 pb-4 border-bottom border-secondary border-opacity-25">
                            <small class="text-white-50 text-uppercase fw-bold ls-1 mb-1 d-block">Project Item</small>
                            <h2 class="fw-bold mb-1" id="galPoleID">#ID</h2>
                            <p class="text-white-50 small mb-0">{{ project.name }}</p>
                        </div>

                        <div class="mb-4">
                            <small class="text-white-50 text-uppercase fw-bold ls-1 mb-2 d-block">Current Stage</small>
                            <h3 class="text-success fw-bold display-6 mb-2" id="galStage">Stage Name</h3>
                            <div class="d-flex align-items-center gap-2 text-white-50 small">
                                <i class="bi bi-clock"></i> <span id="galTime">--</span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <small class="text-white-50 text-uppercase fw-bold ls-1 mb-3 d-block">Item Details</small>
                            <div id="galMetaList" class="d-flex flex-column gap-3">
                                <!-- JS Injected Items -->
                            </div>
                        </div>

                        <div class="mt-auto pt-4 border-top border-secondary border-opacity-25 text-center">
                            <span class="badge bg-white text-dark rounded-pill px-3 py-2 fw-bold font-monospace"
                                id="galCounter">1 / 5</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- JS DATA INJECTION -->
<script>
    const poleData = {
        {% for pole in page_obj %}
    "{{ pole.id }}": {
        "identifier": "{{ pole.custom_id|escapejs }}",
            "metadata": [
                {% for val in pole.custom_values.all %}
    { "label": "{{ val.field_def.label|escapejs }}", "value": "{{ val.value|escapejs }}" },
    {% endfor %}
            ],
    "photos": [
        {% for photo in pole.evidence.all %}
    {
        "url": "{{ photo.image.url|escapejs }}",
            "stage": "{{ photo.stage.name|escapejs }}",
                "time": "{{ photo.captured_at|date:'M d, Y H:i' }}",
                    "lat": "{{ photo.gps_lat|default:'' }}",
                        "long": "{{ photo.gps_long|default:'' }}"
    },
    {% endfor %}
            ]
        },
    {% endfor %}
    };

    let activePoleId = null;
    let activeIndex = 0;
    const modalEl = document.getElementById('galleryModal');
    const bsModal = new bootstrap.Modal(modalEl);

    function openGallery(poleId, index) {
        if (!poleData[poleId] || poleData[poleId].photos.length === 0) {
            alert("No photos uploaded yet for this item.");
            return;
        }
        activePoleId = poleId;
        activeIndex = index;
        renderGallery();
        bsModal.show();
    }

    function navigateGallery(delta) {
        const photos = poleData[activePoleId].photos;
        activeIndex += delta;
        if (activeIndex < 0) activeIndex = photos.length - 1;
        if (activeIndex >= photos.length) activeIndex = 0;
        renderGallery();
    }

    document.addEventListener('keydown', (e) => {
        if (!modalEl.classList.contains('show')) return;
        if (e.key === 'ArrowLeft') navigateGallery(-1);
        if (e.key === 'ArrowRight') navigateGallery(1);
    });

    function renderGallery() {
        const data = poleData[activePoleId];
        const photo = data.photos[activeIndex];

        const img = document.getElementById('galleryImage');
        img.style.opacity = 0;
        setTimeout(() => {
            img.src = photo.url;
            img.style.opacity = 1;
        }, 150);

        document.getElementById('galPoleID').innerText = data.identifier;
        document.getElementById('galStage').innerText = photo.stage;
        document.getElementById('galTime').innerText = photo.time || "No Timestamp";
        document.getElementById('galCounter').innerText = `${activeIndex + 1} / ${data.photos.length}`;

        const metaContainer = document.getElementById('galMetaList');
        metaContainer.innerHTML = '';

        data.metadata.forEach(m => {
            metaContainer.innerHTML += `
                <div class="d-flex justify-content-between border-bottom border-secondary border-opacity-10 pb-2">
                    <span class="text-white-50 small">${m.label}</span>
                    <span class="fw-bold small">${m.value}</span>
                </div>
            `;
        });

        if (photo.lat && photo.long) {
            metaContainer.innerHTML += `
                <div class="d-flex justify-content-between border-bottom border-secondary border-opacity-10 pb-2">
                    <span class="text-white-50 small">GPS Location</span>
                    <a href="https://maps.google.com/?q=${photo.lat},${photo.long}" target="_blank" class="fw-bold small text-info text-decoration-none">
                        <i class="bi bi-geo-alt-fill"></i> View Map
                    </a>
                </div>
            `;
        }
    }
</script>

<!-- FLAG MODAL -->
<div class="modal fade" id="flagModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title fw-bold">Report Issue</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="flagForm" method="post" action="">
                {% csrf_token %}
                <div class="modal-body p-4">
                    <div class="mb-3">Reporting ID: <strong id="flagPoleName"></strong></div>
                    <textarea name="message" class="form-control" rows="4" placeholder="Describe the issue..."
                        required></textarea>
                </div>
                <div class="modal-footer border-0 p-3 bg-light">
                    <button type="button" class="btn btn-link text-muted" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger rounded-pill fw-bold px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openFlagModal(poleId, poleName) {
        document.getElementById('flagPoleName').innerText = poleName;
        document.getElementById('flagForm').action = "/issue/report/" + poleId + "/";
        new bootstrap.Modal(document.getElementById('flagModal')).show();
    }
</script>

{% endblock %}